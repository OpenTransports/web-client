{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"pretty": true
	},
	"include": [
		"src/*"
	],
  "exclude": [
    "node_modules"
  ]
}
